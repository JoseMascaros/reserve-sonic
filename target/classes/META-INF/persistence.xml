<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	
	<persistence-unit name="reserve-sonicPU" transaction-type="JTA">
		<jta-data-source>java:/ReserveSonicDS</jta-data-source>
		<class>pe.edu.upc.reservesonic.models.entities.Admin</class>
		<class>pe.edu.upc.reservesonic.models.entities.District</class>
		<class>pe.edu.upc.reservesonic.models.entities.Instrument</class>
		<class>pe.edu.upc.reservesonic.models.entities.Region</class>
		<class>pe.edu.upc.reservesonic.models.entities.Reservation</class>
		<class>pe.edu.upc.reservesonic.models.entities.Review</class>
		<class>pe.edu.upc.reservesonic.models.entities.Room</class>
		<class>pe.edu.upc.reservesonic.models.entities.Studio</class>
		<class>pe.edu.upc.reservesonic.models.entities.User</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
		</properties>
	</persistence-unit>
</persistence>
